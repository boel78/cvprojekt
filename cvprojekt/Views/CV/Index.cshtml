@model List<cvprojekt.Models.Cv>

@{
    ViewBag.Title = "Ditt CV";
}

<h2>@ViewBag.Title</h2>

@foreach (var cv in Model)
{
    <div>
        <h3>Beskrivning</h3>
        <p>@cv.Description</p>
        <h3>Erfarenheter</h3>
        @foreach (var education in cv.Educations)
        {
            <div>
                <h4>@education.Title</h4>
                <p>@education.Description</p>
                <h5>Kompetenser</h5>
                <ul>
                    @foreach (var skill in education.Skills)
                    {
                        <li>@skill.Name</li>
                    }
                </ul>
            </div>
        }
    </div>
}

<a asp-controller="CV" asp-action="EditCV" class="btn btn-primary">Redigera CV</a>
