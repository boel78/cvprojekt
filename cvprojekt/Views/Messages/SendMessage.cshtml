<div asp-validation-summary="All"></div>

<form asp-controller="Messages" asp-action="SendMessage" method="post">
    <label>Skicka meddelande till:</label>
    <input name="reciever" @if(ViewData["Username"] != null){<text>
                                                                 value="@ViewData["Username"]"
                                                                 readonly
                                                             </text>} />
